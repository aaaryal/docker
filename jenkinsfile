pipeline {
agent { label 'slave' }
stages {
stage ('Build') {
            steps {
                sh 'id;hostname;pwd;which mvn;mvn verify' 
            }
            }
stage('building an image') {
steps {
script {
sh 'echo "RUN hostname">> Dockerfile'
def testimage = docker.build("my-image:${env.BUILD_ID}")
}
}
}
} 
}



