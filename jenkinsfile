pipeline {
agent { label 'slave' }
stages {
stage ('Build') {
            steps {
                sh 'id;mvn package' 
            }
            }
stage('building an image') {
steps {
script {
sh 'echo "COPY workspace/test/target/my-app-1.0-SNAPSHOT.jar /opt">> Dockerfile'
def testimage = docker.build("my-image:${env.BUILD_ID}")
}
}
}
} 
}



